{
    "name": "Truthchain",
    "description": "Truthchain is a decentralized, open-source, and censorship-resistant way to store and share information.",
    "version": "1.0.1",
    "manifest_version": 3,
    "action": {
      "default_title": "Truthchain",
      "default_icon": {
        "16": "assets/images/16.png",
        "24": "assets/images/24.png",
        "32": "assets/images/32.png",
        "48": "assets/images/48.png",
        "64": "assets/images/64.png",
        "128": "assets/images/128.png"
      }
    },
    "icons": {
      "16": "assets/images/16.png",
      "24": "assets/images/24.png",
      "32": "assets/images/32.png",
      "48": "assets/images/48.png",
      "64": "assets/images/64.png",
      "128": "assets/images/128.png" 
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["scripts/content/selection.listener.js"]
        }
    ],
    "background": {
        "service_worker": "scripts/background/service-worker.js"
    },
    "side_panel": {
      "default_path": "index.html"
    },
    "permissions": [
      "sidePanel"
    ]
  }